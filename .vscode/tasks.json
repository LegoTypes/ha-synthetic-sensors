{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Setup Git Hooks",
			"type": "shell",
			"command": "${workspaceFolder}/setup-hooks.sh",
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Run all pre-commit hooks",
			"type": "shell",
			"command": "poetry run pre-commit run --all-files",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Run mypy",
			"type": "shell",
			"command": "poetry run mypy",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Run ruff format",
			"type": "shell",
			"command": "poetry run ruff format .",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Run ruff check",
			"type": "shell",
			"command": "poetry run ruff check --fix .",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Run tests",
			"type": "shell",
			"command": "poetry run pytest",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Run tests with coverage",
			"type": "shell",
			"command": "poetry run pytest --cov=src/ha_synthetic_sensors --cov-report=html --cov-report=term",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Fix markdown formatting",
			"type": "shell",
			"command": "./scripts/fix-markdown.sh",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		}
	]
}
